<form id="postForm" method="POST" action="/insert">
      <fieldset>
        <legend>Workout Tracker</legend>
				
				<label for="name">Name of exercise</label>
        <input type="text" name="name" id="name" placeholder="Name of exercise" autofocus>
        
        <label for="reps">Number of reps</label>
        <input type="number" name="reps" id="reps" min="0" max="10000" step="1">
        
        <label for="weight">Weight</label>
        <input type="number" name="weight" id="weight" min="0" max="10000" step="1">

        <label for="date">Date</label>
        <input type="date" name="date" id="date">
 				
 				<label for="lbs">Unit</label>
 				<select name="lbs" id="lbs">
 					<option value="1">lbs</option>
  				<option value="0">kg</option>
				</select>

        <input type="submit" id="workoutSubmit">
      </fieldset>
</form>


<!-- Display Workout -->
<h1 id="sigh"></h1>
<hr>
<h3>Workout</h3>
	<table id="workoutTable">
		<thead>
			<tr>
				<th style="display:none;">Exercise ID HIDE LATER</th>
				<th>Name of Exercise</th>
				<th>Repetitions</th>
				<th>Weight</th>
				<th>Date</th>
				<th>Units</th>
			</tr>
		</thead> 
		<tbody id="tableBody">
		{{#each workouts}}
		<tr>
			<td>{{this.id}}</td>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.lbs}}</td>
			<td>{{this.date}}</td>
		</tr>
		{{/each}}
		</tbody>
	</table>

    